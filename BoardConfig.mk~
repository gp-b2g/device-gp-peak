include device/qcom/msm7627a/BoardConfig.mk

TARGET_NO_BOOTLOADER := true

BOARD_EGL_CFG := device/qcom/msm7627a/egl.cfg

#Optimizations
COMMON_GLOBAL_CFLAGS += -DREFRESH_RATE=62
